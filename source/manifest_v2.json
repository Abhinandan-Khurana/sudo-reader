{
    "name": "Lindy Reading View",
    "version": "0.4.1",
    "description": "Declutter pages without changing their style. Focus on content, not sidebars.",
    "homepage_url": "https://github.com/lindylearn/reader-extension",
    "icons": {
        "128": "assets/icon.png"
    },
    "permissions": ["storage", "scripting", "activeTab"],
    "options_ui": {
        "page": "options/options.html"
    },

    "manifest_version": 2,
    "browser_action": {},
    "background": {
        "persistent": true,
        "scripts": ["background/background.js"]
    },
    "web_accessible_resources": [
        "sidebar/index.html",
        "content-script/pageview/content.css",
        "assets/**"
    ]
}
