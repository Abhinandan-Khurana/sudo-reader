{
    "name": "Unclutter - Content blocker for articles",
    "version": "0.5.1",
    "description": "Remove distractions from web articles, automatically.",
    "homepage_url": "https://github.com/lindylearn/unclutter",
    "manifest_version": 3,
    "action": {
        "default_title": "Lindy Reading View",
        "default_popup": "popup/index.html"
    },
    "icons": {
        "128": "assets/icon.png"
    },
    "permissions": ["storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "options_ui": {
        "page": "settings-page/index.html"
    },
    "background": {
        "service_worker": "background/events.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script/boot.js"],
            "css": ["content-script/pageview/content.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content-script/pageview/content.css",
                "content-script/pageview/manualContentBlock.css",
                "content-script/switch/index.html",
                "content-script/switch/index.js",
                "assets/**"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
