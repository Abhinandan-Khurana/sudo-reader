{
    "name": "Lindy Reading View",
    "version": "0.4.0",
    "description": "Declutter pages without changing their style. Focus on content, not sidebars.",
    "homepage_url": "https://github.com/lindylearn/reader-extension",
    "manifest_version": 3,
    "action": {},
    "icons": {
        "128": "assets/icon.png"
    },
    "permissions": ["storage", "scripting", "activeTab"],
    "options_ui": {
        "page": "options/options.html"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar/index.html",
                "content-script/pageview/content.css",
                "assets/icons/*"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
