{
	"name": "LindyLearn Annotations",
	"version": "0.1.0",
	"description": "Annotate and highlight web pages in your browser",
	"homepage_url": "https://github.com/lindylearn/browser-extension",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "67.0"
		}
	},
	"browser_action": {},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"history",
		"<all_urls>",
		"tabs",
		"management"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options/options.html"
	},
	"background": {
		"persistent": true,
		"scripts": ["background/background.js"]
	},
	"web_accessible_resources": [
		"sidebar/index.html",
		"pageview/content.css",
		"assets/**"
	]
}
