{
    "name": "LindyLearn Annotations",
    "version": "0.2.0",
    "description": "Highlight, annotate, and talk about great articles right in your browser.",
    "homepage_url": "https://github.com/lindylearn/annotations",
    "manifest_version": 2,
    "minimum_chrome_version": "74",
    "browser_action": {},
    "icons": {
        "512": "assets/icon.png"
    },
    "permissions": ["storage", "activeTab"],
    "options_ui": {
        "chrome_style": true,
        "page": "options/options.html"
    },
    "background": {
        "persistent": true,
        "scripts": ["background/background.js"]
    },
    "web_accessible_resources": [
        "sidebar/index.html",
        "pageview/content.css",
        "assets/**"
    ]
}
