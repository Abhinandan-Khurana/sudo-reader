{
    "dependencies": {
        "approx-string-match": "^2.0.0",
        "axios": "^0.26.0",
        "css": "https://github.com/phgn0/css",
        "lodash": "^4.17.21",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "recharts": "^2.1.9",
        "seedrandom": "^3.0.5",
        "timeago.js": "^4.0.2",
        "webext-options-sync": "^2.0.1",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@parcel/config-webextension": "^2.0.0-rc.0",
        "@parcel/transformer-image": "^2.0.0-rc.0",
        "@parcel/transformer-webextension": "^2.3.2",
        "autoprefixer": "^10.4.2",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.0.0-rc.0",
        "patch-package": "^6.4.7",
        "postcss": "^8.4.7",
        "postinstall-postinstall": "^2.1.0",
        "prettier-plugin-organize-imports": "^2.3.4",
        "process": "^0.11.10",
        "stylelint": "^13.13.1",
        "stylelint-config-xo": "^0.20.0",
        "tailwindcss": "^3.0.23",
        "xo": "^0.44.0"
    },
    "scripts": {
        "build": "parcel build --no-content-hash --no-source-maps --no-optimize --dist-dir distribution --no-cache --detailed-report 0",
        "watch": "parcel watch --dist-dir distribution --no-cache --no-hmr",
        "postinstall": "patch-package"
    },
    "browserslist": "last 1 version",
    "xo": {
        "envs": [
            "browser"
        ],
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "varsIgnorePattern": "browser"
                }
            ]
        }
    },
    "targets": {
        "default": {
            "source": [
                "source/manifest.json",
                "source/background/background.js",
                "source/content-script/index.js",
                "source/content-script/pageview/content.css",
                "source/sidebar/index.html",
                "source/options/options.html"
            ]
        }
    },
    "stylelint": {
        "extends": "stylelint-config-xo"
    },
    "webExt": {
        "sourceDir": "distribution"
    },
    "type": "module"
}
