{
    "dependencies": {
        "approx-string-match": "^2.0.0",
        "axios": "^0.26.0",
        "lodash": "^4.17.21",
        "postcss-safe-parser": "^6.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "recharts": "^2.1.9",
        "seedrandom": "^3.0.5",
        "timeago.js": "^4.0.2",
        "webext-options-sync": "^2.0.1",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.11",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-commonjs": "^21.0.2",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "autoprefixer": "^10.4.2",
        "buffer": "^6.0.3",
        "npm-run-all": "^4.1.5",
        "patch-package": "^6.4.7",
        "path-browserify": "^1.0.1",
        "postcss": "^8.4.8",
        "postinstall-postinstall": "^2.1.0",
        "prettier-plugin-organize-imports": "^2.3.4",
        "process": "^0.11.10",
        "querystring-es3": "^0.2.1",
        "rollup": "^2.70.1",
        "stylelint": "^13.13.1",
        "stylelint-config-xo": "^0.20.0",
        "tailwindcss": "^3.0.23",
        "url": "^0.11.0",
        "xo": "^0.44.0"
    },
    "scripts": {
        "build": "rollup -c rollup.config.js",
        "watch": "rollup -c rollup.config.js -w",
        "install-v3-manifest": "cp source/manifest.json distribution/manifest.json",
        "install-v2-manifest": "cp source/manifest_v2.json distribution/manifest.json",
        "package": "yarn build && npx web-ext build -o -n extension_manifest-v3.zip && yarn install-v2-manifest && npx web-ext build -o -n extension_manifest-v2.zip && yarn install-v3-manifest",
        "postinstall": "patch-package"
    },
    "browserslist": "last 1 version",
    "xo": {
        "envs": [
            "browser"
        ],
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "varsIgnorePattern": "browser"
                }
            ]
        }
    },
    "targets": {
        "default": {
            "source": [
                "source/manifest.json",
                "source/background/background.js",
                "source/content-script/boot.js",
                "source/content-script/pageview/content.css",
                "source/content-script/switch/index.js",
                "source/options/options.html"
            ]
        }
    },
    "stylelint": {
        "extends": "stylelint-config-xo"
    },
    "webExt": {
        "sourceDir": "distribution"
    },
    "type": "module"
}
